<div class="login-register-area mt-no-text">
    <div class="container container-default-2 custom-area">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-custom">
                <div class="login-register-wrapper">
                    <div class="section-content text-center mb-5">
                        <h2 class="title-4 mb-2">Manage your account</h2>

                    </div>
                    @using (Html.BeginForm("ChangeInformation", "Manage", FormMethod.Post, new { @class = "register-form row", role = "form", id = "register-form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @readonly = "readonly" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Tên Của Bạn", @id = "name" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Số Điện Thoại" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Address, new { @placeholder = "Số Điện Thoại" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Address, new { placeholder = "Address" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.NumberCard, new { @placeholder = "Số Điện Thoại" })
                        </div>
                        <div class="single-input-item mb-3">
                            @Html.TextBoxFor(m => m.Cvv, new { @placeholder = "Số Điện Thoại" })
                        </div>
                        <p>
                            @(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword")
                    : Html.ActionLink("Pick a password", "SetPassword"))
                        </p>
                        <div class="single-input-item mb-3">
                            <div class="col-md-offset-2">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Save" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


