@if (Request.IsAuthenticated) {
    <form id="logoutForm"  action="@Url.Action("LogOff", "Account", new { area = "" })" , method="post">
        @Html.AntiForgeryToken()

        
            <li class="nav-res menu-item-has-children" style="display:inline-block;padding:30px 0;font-size:18px">
                <a class="nav-link" style="color:black" href="@Url.Action("Index", "Manage", new { area = "" })"><i class="fa fa-user"></i></a>
            </li>
            <li class="nav-login" style="display: inline-block; align-items: center; font-size: 18px">
                <a class="nav-link" style="color:black" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-arrow-right"></i></a>
            </li>
       
    </form>
}
else {
    
        <li class="nav-res" style="padding-right:10px">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" , @class = "nav-link"})</li>
        <li class="nav-login"style="padding-right:10px">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" , @class = "nav-link"})</li>
 
}
