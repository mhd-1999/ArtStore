                            <h3>Order Details</h3>
                            <div class="row">

                                <div class="col-md-12 col-custom">
                                    <div class="checkout-form-list">
                                        <label>Your Name</label>
                                        @Html.EditorFor(model => model.CusName, new { htmlAttributes = new { @readonly = "readonly" } })
                                    </div>
                                </div>

                                <div class="col-md-12 col-custom">
                                    <div class="checkout-form-list">
                                        <label>Address</label>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-md-6 col-custom">
                                    <div class="checkout-form-list">
                                        <label>OrderDate</label>
                                        @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-md-12 col-custom">
                                    <div class="checkout-form-list">

                                        @Html.Action("GetOrderDetails", "Orders", new { orderId = Model.Id })
                                    </div>
                                </div>
                                <div class="col-md-12 col-custom">
                                    <div class="checkout-form-list">
                                        <label>Total Order</label>
                                        @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-md-6 col-custom">
                                    <div class="checkout-form-list">
                                        <label> Status: <b>@(Model.Status == 0 ? "Mới" : "Hoàn Thành")</b></label>
                                        
                                    </div>
                                </div>
                                <div class="col-md-12 col-custom">
                                    <div id="cbox-info" class="checkout-form-list create-account">
                                        <p class="mb-2">Create an account by entering the information below. If you are a returning customer please login at the top of the page.</p>
                                        <label>Account password <span class="required">*</span></label>
                                        <input placeholder="password" type="password">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6">
                    <img class="col-md-12 col-custom" src="https://image-cdn.hypb.st/https%3A%2F%2Fhypebeast.com%2Fimage%2F2021%2F12%2Fopensea-bans-payc-phayc-bored-ape-ripoff-collections-0.jpg?w=960&cbr=1&q=90&fit=max" />
