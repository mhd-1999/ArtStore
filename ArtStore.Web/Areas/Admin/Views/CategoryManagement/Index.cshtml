@model IEnumerable<ArtStore.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","CategoryManagement")" style="color:lawngreen"><i class="fas fa-plus-circle"></i></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="text-align:end">
            <a href="@Url.Action("Edit","CategoryManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-edit"></i></a>
            <a href="@Url.Action("Details","CategoryManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-info-circle"></i></a>
            <a href="@Url.Action("Delete","CategoryManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-backspace"></i></a>
        </td>
    </tr>
}

</table>
