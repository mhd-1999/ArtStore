@model IEnumerable<ArtStore.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountId)
        </th>
        
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @(item.Status == 0 ? "Mới" : "Hoàn Thành")
        </td>
        <td>
            @Html.Action("GetAccountName", "OrderManagement", new { accId = item.AccountId })
        </td>
        <td style="text-align:end">
            <a href="@Url.Action("Edit","OrderManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-edit"></i></a>
            <a href="@Url.Action("Details","OrderManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-info-circle"></i></a>
            <a href="@Url.Action("Delete","OrderManagement",new { id = item.Id })" style="color:cornflowerblue"><i class="fas fa-backspace"></i></a>
        </td>
        
    </tr>
}

</table>
